{
  "env": {
    "browser": true,
    "es2021": true
  },
  "plugins": ["autofix"],
  "extends": ["airbnb-base", "prettier"],
  "overrides": [
    {
      "env": {
        "node": true
      },
      "files": [".eslintrc.{js,cjs}"],
      "parserOptions": {
        "sourceType": "script"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-underscore-dangle": 0,
    "import/prefer-default-export": 0,
    "autofix/eqeqeq": "error",
    "autofix/no-console": "error",
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ]
  }
}
